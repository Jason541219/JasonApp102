<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting_Me">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.1"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <TextView
            android:id="@+id/label_registername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/label_username"
            android:textSize="@dimen/labeltextsize"
            app:layout_constraintBottom_toBottomOf="@+id/input_mename"
            app:layout_constraintEnd_toStartOf="@id/guideline1R"
            app:layout_constraintStart_toStartOf="@id/guideline1l"  />

        <EditText
            android:id="@+id/input_mename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/inputhint_registername"
            app:layout_constraintEnd_toStartOf="@id/guideline2R"
            app:layout_constraintStart_toStartOf="@id/guideline1R"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/label_registeraccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_useraccount"
            android:textSize="@dimen/labeltextsize"
            app:layout_constraintBottom_toBottomOf="@id/input_meaccount"
            app:layout_constraintEnd_toStartOf="@id/guideline1R"
            app:layout_constraintStart_toStartOf="@id/guideline1l" />

        <EditText
            android:id="@+id/input_meaccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/inputhint_loginaccount"
            app:layout_constraintEnd_toStartOf="@id/guideline2R"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/guideline1R"
            app:layout_constraintTop_toBottomOf="@id/input_mename"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/label_registerpid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_userpid"
            android:textSize="@dimen/labeltextsize"
            app:layout_constraintBottom_toBottomOf="@id/input_mepid"
            app:layout_constraintEnd_toStartOf="@id/guideline1R"
            app:layout_constraintStart_toStartOf="@id/guideline1l" />

        <EditText
            android:id="@+id/input_mepid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/inputhint_registerpid"
            app:layout_constraintEnd_toStartOf="@id/guideline2R"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/guideline1R"
            app:layout_constraintTop_toBottomOf="@id/input_meaccount"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/label_registerbirthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_userbirthday"
            android:textSize="@dimen/labeltextsize"
            app:layout_constraintBottom_toBottomOf="@id/input_mebirthday"
            app:layout_constraintEnd_toStartOf="@id/guideline1R"
            app:layout_constraintStart_toStartOf="@id/guideline1l" />

        <EditText
            android:id="@+id/input_mebirthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="date"
            android:hint="@string/inputhint_registerbirthday"
            app:layout_constraintEnd_toStartOf="@id/guideline2R"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/guideline1R"
            app:layout_constraintTop_toBottomOf="@id/input_mepid"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/label_registeremail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_useremail"
            android:textSize="@dimen/labeltextsize"
            app:layout_constraintBottom_toBottomOf="@id/input_meemail"
            app:layout_constraintEnd_toStartOf="@id/guideline1R"
            app:layout_constraintStart_toStartOf="@id/guideline1l" />

        <EditText
            android:id="@+id/input_meemail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/inputhint_registeremail"
            app:layout_constraintEnd_toStartOf="@id/guideline2R"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/guideline1R"
            app:layout_constraintTop_toBottomOf="@id/input_mebirthday"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/label_registermobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_usermobile"
            android:textSize="@dimen/labeltextsize"
            app:layout_constraintBottom_toBottomOf="@id/input_memobile"
            app:layout_constraintEnd_toStartOf="@id/guideline1R"
            app:layout_constraintStart_toStartOf="@id/guideline1l" />

        <EditText
            android:id="@+id/input_memobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="phone"
            android:hint="@string/inputhint_registermobile"
            app:layout_constraintEnd_toStartOf="@id/guideline2R"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/guideline1R"
            app:layout_constraintTop_toBottomOf="@id/input_meemail"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/label_registergender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_usergender"
            android:textSize="@dimen/labeltextsize"
            app:layout_constraintBottom_toBottomOf="@id/radio_megender"
            app:layout_constraintEnd_toStartOf="@id/guideline1R"
            app:layout_constraintStart_toStartOf="@id/guideline1l" />

        <RadioGroup
            android:id="@+id/radio_megender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@id/guideline2R"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@id/guideline1R"
            app:layout_constraintTop_toBottomOf="@id/input_memobile"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_memale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/radio_registermale"
                android:checked="true"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radio_mefemale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/radio_registerfemale"
                android:textSize="20sp" />
        </RadioGroup>


        <TextView
            android:id="@+id/label_registerclinic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_registerclinic"
            android:textSize="@dimen/labeltextsize"
            app:layout_constraintBottom_toBottomOf="@id/spinner_meclinic"
            app:layout_constraintEnd_toStartOf="@id/guideline1R"
            app:layout_constraintStart_toStartOf="@id/guideline1l" />

        <Spinner
            android:id="@+id/spinner_meclinic"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@id/guideline2R"
            app:layout_constraintHorizontal_bias="1.0"
            android:textSize="24sp"
            android:background="@drawable/spinner_background"
            app:layout_constraintTop_toBottomOf="@+id/radio_megender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline1R" />

        <TextView
            android:id="@+id/label_registeravatar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_useravatar"
            android:textSize="@dimen/labeltextsize"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@id/guideline1R"
            app:layout_constraintStart_toStartOf="@id/guideline1l"
            app:layout_constraintTop_toBottomOf="@id/label_registerclinic"   />

        <ImageView
            android:id="@+id/img_meavatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="0dp"
            android:background="@color/cardview_light_background"
            android:contentDescription="@string/clicktotakepicture"
            app:layout_constraintStart_toEndOf="@id/label_registeravatar"
            app:layout_constraintEnd_toStartOf="@id/guideline2R"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="@+id/label_registeravatar"
            app:srcCompat="@drawable/btn_shape_loginasp" />

        <Button
            android:id="@+id/btn_gome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_shape_loginasa"
            android:text="@string/btn_ready2me"
            app:layout_constraintEnd_toStartOf="@id/btn_cancelme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_meavatar" />

        <Button
            android:id="@+id/btn_cancelme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_shape_loginasa"
            android:text="@string/btn_cancel2me"
            app:layout_constraintStart_toEndOf="@id/btn_gome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_meavatar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>